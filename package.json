{
  "name": "foraum-deals-extension",
  "version": "1.0.0",
  "description": "Browser extension to show affiliate deals and coupons",
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css --minify",
    "build:webpack": "webpack --config webpack.config.js",
    "build": "npm run build:webpack && npm run build:css",
    "watch": "webpack --watch --config webpack.config.js",
    "clean": "rm -rf dist",
    "package": "npm run build && cd dist && zip -r ../foraum-deals-extension.zip . -x '*.DS_Store' && cd ..",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "check": "npm run lint && npm run format:check && npm run type-check"
  },
  "keywords": [
    "browser-extension",
    "deals",
    "coupons"
  ],
  "author": "Foraum GmbH",
  "license": "SEE LICENSE IN LICENSE",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/chrome": "^0.0.258",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "prettier": "^3.6.2",
    "sharp": "^0.34.5",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.17",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.4",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  }
}
